  <div class="text-center">
    <h2>It happens! Let us send you a link to reset your password!</h2>
  </div>
<div class="user-sessions-container col-md-4 col-md-offset-4">
  <div class="form-container col-md-10 col-md-offset-1">
    <div class="text-center"><h1>Password Reset</h1></div>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send", class: "col-md-12 btn primary-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
