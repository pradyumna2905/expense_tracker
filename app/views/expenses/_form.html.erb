<div class="col-md-2 col-md-offset-5">
  <%= simple_form_for @expense do |f| %>
    <%= f.input :date, as: :date %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <% if current_user.categories.reject(&:default_category?).blank? %>
      <%= f.label "Category" %>
      <%= link_to "Add New Category", new_category_path(current_user) %>
    <% else %>
      <%= f.association :category,
            collection: @categories,
            selected: Category::DEFAULT_CATEGORY
      %>
    <% end %>
    <% if current_user.payment_methods.reject(&:default_payment_method?).blank? %>
      <%= f.label "Payment method" %>
      <%= link_to "Add New Payment Method", new_payment_method_path(current_user) %>
    <% else %>
      <%= f.association :payment_method,
            collection: @payment_methods,
            selected: PaymentMethod::DEFAULT_PAYMENT_METHOD
      %>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
