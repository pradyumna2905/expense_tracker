<div class="col-md-2 col-md-offset-5">
  <%= simple_form_for @expense do |f| %>
    <%= f.input :date, as: :date %>
    <%= f.input :description %>
    <%= f.input :amount %>
    <%= f.association :payment_method, collection: current_user.payment_methods.all %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
