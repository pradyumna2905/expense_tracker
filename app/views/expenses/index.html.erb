<h1><%= number_to_currency(@grand_total) %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @user.expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.description %></td>
        <td><%= number_to_currency(expense.amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
